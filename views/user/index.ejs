    <title>Jokes of Day</title>
</head>
<body>
<% include ../header.ejs %>
<div class="container" id="container">
    <div class="row">
        <div class="col-md-12">
            <% if (locals.recent_jokes.length > 0) { %>
            <div class="item box-large">
                <div id="my-timeline"></div>
            </div>
            <% } else { %>
            <div class="alert alert-success">
                <strong>Oops!还没有一条没分享，赶快登录分享。</strong>
            </div>
            <% } %>
        </div>
    </div>

</div>
<% include ../common/footer.ejs %>
<% include ../jsfiles.ejs %>
<script src="/js/storyjs-embed.js"></script>
<script>
    $(document).ready(function() {
        //timeline
        createStoryJS({
            type: 'timeline',
            debug: false,
            source: 'http://127.0.0.1:3000/userprofile/json/<%= locals.user.name %>.json',
            width: '100%',
            height: '600',
            hash_bookmark: true,
            font: 'NewsCycle-Merriweather',
            embed_id: 'my-timeline'
        });
    });
</script>
<script src="/js/storyjs-embed-generator.js"></script>

