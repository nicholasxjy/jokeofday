<title>Jokes of Day</title>
</head>
<body class="blurBg-false">
<% include ../header.ejs %>
<div class="container reset-pass-section">
    <div class="row">
        <div class="col-md-8">
            <% if (locals.error) { %>
            <div class="alert alert-danger">
                <strong><%= error %></strong>
            </div>
            <% } %>
            <form class="formoid-solid-green" style="background-color:#FFFFFF;
            font-size:14px;font-family:'Roboto',Arial,Helvetica,sans-serif;
            color:#34495E;max-width:480px;min-width:150px;margin-top:80px;"
                  method="post" action="/reset-password">
                <div class="title"><h2>重置密码</h2></div>
                <div class="element-password">
                    <label class="title"></label>
                    <div class="item-cont">
                        <input class="large" type="password" name="pass" value="" placeholder="新密码"/>
                        <span class="icon-place"></span>
                    </div>
                </div>
                <div class="element-password">
                    <label class="title"></label>
                    <div class="item-cont">
                        <input class="large" type="password" name="repass" value="" placeholder="确认新密码"/>
                        <span class="icon-place"></span>
                    </div>
                </div>
                <!-- there should be put hidden fields of name and key, they are used by reset password -->
                <input type="hidden" name="name" value="<%= locals.name %>"/>
                <input type="hidden" name="key" value="<%= locals.key %>"/>
                <div class="submit">
                    <input type="submit" value="Submit"/>
                </div>
            </form>
            <div class="back-to-home">
                <a href="/">Learn more</a> about Joke of Day
            </div>
        </div>
    </div>
</div>
