<body class="blurBg-false">
<% include ../header.ejs %>
<div class="container signin-section">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <% if (locals.error) { %>
                <div class="alert alert-warning">
                    <strong><%= error %></strong>
                </div>
            <% } %>
            <form class="formoid-solid-light-green" style="background-color:#FFFFFF;font-size:14px;font-family:'Roboto',Arial,Helvetica,sans-serif;color:#34495E;max-width:480px;min-width:150px" method="post" action="/signin">
                <div class="title"><h2>登录</h2></div>
	            <div class="element-name">
                    <label class="title"></label>
                    <div class="nameLast" style="width:100%;">
                        <input class="large" type="text" name="name" placeholder="输入用户名"/><span class="icon-place"></span>
                    </div>
                </div>

	            <div class="element-password">
                    <label class="title"></label>
                    <div class="item-cont">
                        <input class="large" type="password" name="pass" value="" placeholder="输入密码"/><span class="icon-place"></span>                         </div>
                </div>
                <div class="submit">
                    <input type="submit" value="确定"/>
                </div>
            </form>
            
            <div class="forgot-pass-part">
                    <a href="/signup" >注册新用户</a>
                    <a href="/forgot-password" >忘记密码？</a>
            </div>
        </div>
    </div>
</div>
