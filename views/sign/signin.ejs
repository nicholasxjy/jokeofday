<% include ../base-top.ejs %>
<div class="container signin-section">
    <div class="row">
        <div class="col-md-8">
            <% if (locals.error) { %>
                <div class="alert alert-warning">
                    <strong><%= error %></strong>
                </div>
            <% } %>
            <form action="/signin" method="post" role="form" class="form-horizontal">
                <div class="form-group">
                        <label for="name" class="signin-info col-md-3 control-label">用户名：</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" name="name" size="30" value=""/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="signin-session col-md-3 control-label">密码：</label>
                    <div class="col-md-5">
                        <input type="password" class="form-control" name="pass" size="30" value=""/>
                    </div>
                </div>
                <div class="form-action">
                    <div class="col-md-3"></div>
                    <input type="submit" class="btn btn-primary" value="登录"/>
                    <a href="/forgot-password" class="find-pass">忘记密码？</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../base-bottom.ejs %>