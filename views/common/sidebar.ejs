<div class="user-info">
    <% if (locals.current_user) { %>
    <a href="/user/<%= locals.current_user.name %>">
        <img src="<%= locals.current_user.profile_image_url %>"
             alt="profile thumbnail" title="<%= locals.current_user.name %>"
             class="avatar"/>
    </a>
    <div class="info-content">
        <h1><a href="/user/<%= locals.current_user.name %>"><%= locals.current_user.name %></a></h1>
        <% if (locals.current_user.profile) { %>
            <div class="user-profile">
                <%= locals.current_user.profile %>
            </div>
        <% } else { %>
            <div class="user-profile">
                赶快写点东西，向大家详细的介绍你自己吧。
            </div>
        <% } %>
        <div class="info-data">
            <ul class="list-inline">
                <li title="粉丝">
                    <a href="/<%= locals.current_user.name %>/fans">
                        <i class="fa fa-users"></i><%= locals.current_user.follower_count %>
                    </a>
                </li>
                <li title="关注">
                    <a href="/<%= locals.current_user.name %>/followings">
                        <i class="fa fa-heart"></i><%= locals.current_user.following_count %>
                    </a>
                </li>
                <li title="分数">
                    <a href="/scores/ranking">
                        <i class="fa fa-star"></i><%=locals.current_user.score %>
                    </a>
                </li>
            </ul>
        </div>
    </div>
<% } else { %>
    <a href="">
        <img src="<%= locals.config.default_image %>"
             alt="profile thumbnail" title="joke of day"
             class="avatar"/>
    </a>
    <div class="info-content">
        <h1><a href="">Joke of Day</a></h1>
        <div class="user-profile">
            这里有每天最搞笑的事情发生，分享每一个搞笑瞬间，
            赶快加入，分享最hilarious的精彩瞬间!
            你又偷着笑了吗？
        </div>
    </div>
<% } %>
    <ul id="navigation-bar">
        <li>
            <a href="/"><i class="fa fa-home"></i>首页</a>
        </li>
        <li>
            <a href="/about"><i class="fa fa-info"></i>关于</a>
        </li>
        <% if (locals.current_user) { %>
        <li><a data-toggle="modal" data-target="#postjokemodal" style="cursor: pointer">
                <i class="fa fa-share-square-o"></i>发表Joke</a></li>
        <li><a href="/settings"><i class="fa fa-gear"></i>设置</a></li>
        <li>
            <a href="/user/messages">
                <i class="fa fa-envelope"></i>消息
                <% if (locals.current_user.message_not_read !== 0) { %>
                    <span class="badge"><%= locals.current_user.message_not_read %></span>
                <% } %>
            </a>
        </li>
        <li><a href="/signout"><i class="fa fa-sign-out"></i>退出</a></li>
        <% } else { %>
        <li><a href="/signup"><i class="fa fa-user"></i>注册</a></li>
        <li><a href="/signin"><i class="fa fa-sign-in"></i>登录</a></li>
        <% } %>
        <li>
            <form action="/search" method="post" id="search-form">
                <div class="input-group">
                    <i class="fa fa-search"></i>
                    <input type="text" name="q" id="search" value="Search"
                           onfocus="if (this.value === 'Search') this.value='';"
                           onblur="if (this.value=== '') this.value='Search';"/>
                </div>
            </form>
        </li>
    </ul>
</div>
<% if (locals.current_user) { %>
<% include post-joke.ejs %>
<% } %>