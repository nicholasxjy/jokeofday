<div class="col-md-4 user-info">
    <div class="info-header">
        个人信息
    </div>
    <div class="info-content">
        <div class="info-thumbnail">
            <ul class="list-inline">
                <li>
                    <a href="/user/<%= locals.user.name %>">
                        <img src="<%= locals.user.profile_image_url %>"
                             alt="profile thumbnail" title="<%= locals.user.name %>"
                             class="img-circle img-responsive" width="50" height="50"/>
                    </a>
                </li>
                <li class="info-username">
                    <a href="/user/<%= locals.user.name %>"><%= locals.user.name %></a>
                </li>
            </ul>
        </div>
        <div class="info-data">
            <ul class="list-inline">
                <li title="粉丝">
                    <a href="/<%= locals.user.name %>/fans">
                        <i class="fa fa-users"></i><span id="fans"><%= locals.user.follower_count %></span>
                    </a>
                </li>
                <li title="关注">
                    <a href="/<%= locals.user.name %>/followings">
                        <i class="fa fa-heart"></i><span><%= locals.user.following_count %></span>
                    </a>
                </li>
                <li title="分数"><i class="fa fa-star"></i><%=locals.user.score %></li>
            </ul>
        </div>
        <div class="info-message">
            <a href="/user/messages">
                <i class="fa fa-comment fa-lg"></i><%= locals.messages %> 条未读信息
            </a>
            <% if (!locals.isUser) { %>
                <% if (!locals.relation) { %>
                    <button class="btn btn-success pull-right btn-follow" action="add-follow"
                            id="<%= locals.user._id %>">加入关注</button>
                <% } else { %>
                    <button class="btn btn-default pull-right btn-follow" action="cancel-follow"
                            id="<%= locals.user._id %>">取消关注</button>
                <% } %>
            <% } %>
        </div>
    </div>
</div>